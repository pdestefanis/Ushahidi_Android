<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <com.ushahidi.android.app.DialogPreference
        android:dialogMessage="@string/txt_confirm_clear_cache"
        android:dialogTitle="@string/txt_clear_cache"
        android:key="clear_cache_preference"
        android:negativeButtonText="@string/btn_cancel"
        android:positiveButtonText="@string/btn_ok"
        android:summary="@string/hint_clear_cache"
        android:title="@string/txt_clear_cache" />

    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="11"
        android:dialogMessage="Map Settings"
        android:dialogTitle="@string/map_zoom_title"
        android:key="zoom_level_preference"
        android:max="15"
        android:summary="@string/map_zoom_summary"
        android:text=" level"
        android:title="@string/map_zoom_title" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="60"
        android:dialogMessage="GPS Timeout in seconds"
        android:dialogTitle="@string/txt_gps_timeout"
        android:key="gps_timeout_preference_temp"
        android:max="180"
        android:summary="@string/txt_gps_timeout_in_sec"
        android:text=" sec"
        android:title="@string/txt_gps_timeout" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="5"
        android:dialogMessage="Location Tolerance in Km"
        android:dialogTitle="@string/txt_location_tolerance"
        android:key="location_tolerance"
        android:max="10"
        android:summary="@string/txt_location_tolerance_in_km"
        android:text=" Km"
        android:title="@string/txt_location_tolerance" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="60"
        android:dialogMessage="Set how often Ushahidi syncronizes with the selected deployment."
        android:dialogTitle="@string/txt_auto_update_delay"
        android:key="AutoUpdateDelay"
        android:max="360"
        android:summary="@string/hint_auto_update_delay"
        android:text=" Minutes"
        android:title="@string/txt_auto_update_delay" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="6"
        android:dialogMessage="Maximum images in report(upto 16)"
        android:dialogTitle="@string/txt_report_images_count"
        android:key="report_image_count_temp"
        android:max="16"
        android:summary="@string/txt_report_images_count_message"
        android:text=" images"
        android:title="@string/txt_report_images_count" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="120"
        android:dialogMessage="Maximum Audio Recording Length"
        android:dialogTitle="Audio Recording Length"
        android:key="audio_length_preference"
        android:max="600"
        android:summary="Maximum length of recording in seconds"
        android:text=" seconds"
        android:title="Maximum Recording Length" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="2"
        android:dialogMessage="Maximum Audio Recordings per Report"
        android:dialogTitle="Maximum Recordings"
        android:key="audio_max_preference"
        android:max="16"
        android:summary="Maximum Number of Audio Recordings in a Report"
        android:text=" Recordings"
        android:title="Maximum Recordings" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="30"
        android:dialogMessage="The total number of reports to fetch from the selected deployment."
        android:dialogTitle="@string/total_reports"
        android:key="TotalReports_temp"
        android:max="250"
        android:summary="@string/hint_total_reports"
        android:text=" reports"
        android:title="@string/total_reports" />
    <com.ushahidi.android.app.ui.SeekBarPreference
        android:defaultValue="100"
        android:dialogMessage=" Resized image width"
        android:dialogTitle="@string/photo_resize_title"
        android:key="photo_size_preference"
        android:max="500"
        android:summary="@string/photo_resize_summary"
        android:text=" pixels"
        android:title="@string/photo_resize_title" />

</PreferenceScreen>